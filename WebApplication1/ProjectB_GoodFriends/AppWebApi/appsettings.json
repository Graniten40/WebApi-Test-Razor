{
    "Logging": { //All Logger providers
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": { //Valid only for the console
            "LogLevel": {
                "Services": "Information",
                "AppWebApi.Controllers": "None",
                "DbRepos": "None"
            }
        },
        "InMemory": { //Valid only for the InMemory provider
            "LogLevel": {
                "Services": "Information",
                "AppWebApi.Controllers": "Information",
                "DbRepos": "Information"
            }
        }
    },

    "AllowedHosts": "*",

    "ApplicationSecrets": {
        "SecretStorage": "UserSecrets"
    },

    "DatabaseConnections": {
        "DefaultDataUser": "root",    //"gstusr" | "usr" | "supusr" | "dbo" | "root"
        "MigrationUser": "root",     //migration is done by root user
        "UseDataSetWithTag": "sql-friends.sqlserver.docker" //"sql-friends.sqlserver.docker" | "sql-friends.mysql.docker" | "sql-friends.postgresql.docker"
    },

    "ConnectionSets": { //Bound to DbConnectionSetsOptions
        "DataSets": [
            {
            "DbTag": "sql-friends.sqlserver.docker",
            "DbServer": "sqlserver",
            "DbConnections": [
                { "DbUserLogin": "root", "DbConnection": "sql-friends.sqlserver.docker.root" },
                { "DbUserLogin": "dbo",  "DbConnection": "sql-friends.sqlserver.docker.dbo"  },
                { "DbUserLogin": "supusr","DbConnection":"sql-friends.sqlserver.docker.supusr"},
                { "DbUserLogin": "usr",  "DbConnection": "sql-friends.sqlserver.docker.usr"  },
                { "DbUserLogin": "gstusr","DbConnection":"sql-friends.sqlserver.docker.gstusr"}
            ]
            }
        ],
        "IdentitySets": []
    }

}
