@page "{id:guid}"
@model AppRazor.Pages.Friends.EditModel

@{
    ViewData["Title"] = "Edit Friend";
}

<h2>Edit Friend</h2>

@* Visar generellt felmeddelande (t.ex. API-fel vid save) *@
@if (Model.ErrorMessage is not null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@* POST-formulär för att uppdatera friend.
   Alla fält binds till Model.Friend via asp-for. *@
<form method="post" class="mt-3">
    @Html.AntiForgeryToken()

    @* Visar modellfel som inte är kopplade till ett specifikt fält *@
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    @* FriendId skickas dolt så backend vet vilken friend som ska uppdateras *@
    <input type="hidden" asp-for="Friend.FriendId" />

    <div class="mb-3">
        <label class="form-label" asp-for="Friend.FirstName"></label>
        <input class="form-control" asp-for="Friend.FirstName" />
        <span class="text-danger" asp-validation-for="Friend.FirstName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Friend.LastName"></label>
        <input class="form-control" asp-for="Friend.LastName" />
        <span class="text-danger" asp-validation-for="Friend.LastName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Friend.Email"></label>
        <input class="form-control" asp-for="Friend.Email" type="email" />
        <span class="text-danger" asp-validation-for="Friend.Email"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Friend.Birthday"></label>
        <input class="form-control" asp-for="Friend.Birthday" type="date" />
        <span class="text-danger" asp-validation-for="Friend.Birthday"></span>
    </div>

    <hr />
    <h5>Address (optional)</h5>

    @* Adress är valfri.
       Om den saknas visas en informationsruta istället för fält. *@
    @if (Model.Friend.Address is null)
    {
        <div class="alert alert-info">
            No address is registered for this friend.

            @* Knapp som postar tillbaka till samma handler
               och signalerar att adressfält ska skapas *@
            <div class="mt-2">
                <button type="submit"
                        class="btn btn-outline-primary"
                        name="addAddress"
                        value="true">
                    Add address fields
                </button>
            </div>
        </div>
    }
    else
    {
        @* Om adress finns visas redigerbara adressfält *@
        <div class="mb-3">
            <label class="form-label" asp-for="Friend.Address.StreetAddress"></label>
            <input class="form-control" asp-for="Friend.Address.StreetAddress" />
            <span class="text-danger" asp-validation-for="Friend.Address.StreetAddress"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Friend.Address.ZipCode"></label>
            <input class="form-control" asp-for="Friend.Address.ZipCode" />
            <span class="text-danger" asp-validation-for="Friend.Address.ZipCode"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Friend.Address.City"></label>
            <input class="form-control" asp-for="Friend.Address.City" />
            <span class="text-danger" asp-validation-for="Friend.Address.City"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Friend.Address.Country"></label>
            <input class="form-control" asp-for="Friend.Address.Country" />
            <span class="text-danger" asp-validation-for="Friend.Address.Country"></span>
        </div>
    }

    @* Save → POST till OnPostAsync i PageModel *@
    <button class="btn btn-primary" type="submit">Save</button>

    @* Cancel → tillbaka till Details-sidan för samma friend *@
    <a class="btn btn-outline-secondary"
       asp-page="/Friends/Details/Index"
       asp-route-friendId="@Model.Friend.FriendId">
        Cancel
    </a>
</form>

@section Scripts {
    @* Aktiverar klient-side-validering (DataAnnotations + unobtrusive JS) *@
    <partial name="_ValidationScriptsPartial" />
}
